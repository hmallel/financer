<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="de.raphaelmuesseler.financer.shared.model.db">
    <class name="DatabaseToken" table="users_tokens">
        <id name="id" type="int">
            <column name="id"/>
            <generator class="increment"/>
        </id>
        <many-to-one name="user" class="DatabaseUser">
            <column name="user_id" not-null="true"/>
        </many-to-one>
        <property name="token" type="java.lang.String">
            <column name="token"/>
        </property>
        <property name="expireDate" type="java.time.LocalDate">
            <column name="expire_date"/>
        </property>
        <property name="ipAddress" type="java.lang.String">
            <column name="ip_address"/>
        </property>
        <property name="system" type="java.lang.String">
            <column name="system"/>
        </property>
        <property name="isMobile" type="boolean">
            <column name="is_mobile"/>
        </property>
    </class>
</hibernate-mapping>