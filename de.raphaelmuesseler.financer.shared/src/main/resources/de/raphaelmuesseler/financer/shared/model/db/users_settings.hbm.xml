<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="de.raphaelmuesseler.financer.shared.model.db">
    <class name="de.raphaelmuesseler.financer.shared.model.db.SettingsDAO" table="users_settings">
        <id name="id" type="int">
            <column name="id" />
            <generator class="increment" />
        </id>
        <many-to-one name="user" class="UserDAO" fetch="select">
            <column name="user_id" not-null="true"/>
        </many-to-one>
        <property name="property" type="java.lang.String">
            <column name="property" />
        </property>
        <property name="value" type="java.lang.String">
            <column name="value" />
        </property>
    </class>
</hibernate-mapping>