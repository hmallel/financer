<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXHamburger?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<StackPane alignment="center" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="de.raphaelmuesseler.financer.client.javafx.main.FinancerController">
    <BorderPane fx:id="rootLayout">
        <left>
            <VBox fx:id="navigationBox" prefWidth="250" spacing="30" alignment="TOP_CENTER">

                <VBox fx:id="imageContainer">
                    <VBox alignment="CENTER">
                        <ImageView fitHeight="150.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="/images/icons/financer-icon.png"/>
                        </ImageView>
                    </VBox>
                    <Label fx:id="userNameLabel" />
                </VBox>

                <VBox spacing="10">
                    <padding>
                        <Insets top="25" bottom="25"/>
                    </padding>
                    <Button fx:id="overviewTabBtn" minWidth="250.0" styleClass="nav-btn, selected" text="%overview"
                            onAction="#handleShowOverviewContent"/>
                    <Button fx:id="transactionsTabBtn" minWidth="250.0" styleClass="nav-btn" text="%transactions"
                            onAction="#handleShowTransactionsContent"/>
                    <Button fx:id="statisticsTabBtn" minWidth="250.0" styleClass="nav-btn" text="%statistics"
                            onAction="#handleShowStatisticsContent"/>
                    <Button fx:id="profileTabBtn" minWidth="250.0" styleClass="nav-btn" text="%profile"
                            onAction="#handleShowProfileContent"/>
                    <Button fx:id="settingTabBtn" minWidth="250.0" styleClass="nav-btn" text="%settings"
                            onAction="#handleShowSettingsContent"/>
                </VBox>
            </VBox>
        </left>
        <top>
            <BorderPane fx:id="header" styleClass="header">
                <left>
                    <HBox>
                        <JFXHamburger fx:id="hamburgerBtn" onMouseClicked="#onToggleNavigationBar" alignment="CENTER_LEFT"/>
                        <Label fx:id="financerLabel" text="F I N A N C E R" alignment="CENTER"/>
                    </HBox>
                </left>
                <center>
                    <HBox  alignment="CENTER" spacing="5">
                        <Label fx:id="contentLabel" text="%overview"/>
                        <Label fx:id="offlineLabel" text="%offline" visible="false" />
                    </HBox>
                </center>
                <right>
                    <MenuButton fx:id="accountMenuBtn" text="Account">
                        <items>
                            <MenuItem fx:id="logoutBtn" text="Logout" onAction="#handleLogoutBtn" />
                        </items>
                    </MenuButton>
                </right>

            </BorderPane>

        </top>
    </BorderPane>
</StackPane>
