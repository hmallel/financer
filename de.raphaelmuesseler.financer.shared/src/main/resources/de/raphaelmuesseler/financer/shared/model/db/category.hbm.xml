<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="de.raphaelmuesseler.financer.shared.model.db">
    <class name="DatabaseCategory" table="users_categories">
        <id name="id" type="int">
            <column name="id"/>
            <generator class="increment"/>
        </id>
        <many-to-one name="user" class="DatabaseUser" insert="false" update="false">
            <column name="user_id" />
        </many-to-one>
        <property name="categoryClass" type="int">
            <column name="cat_id"/>
        </property>
        <many-to-one name="parent" class="DatabaseCategory">
            <column name="parent_id"/>
        </many-to-one>
        <property name="name" type="java.lang.String">
            <column name="name"/>
        </property>
        <set name="transactions" table="transactions" fetch="select" cascade="all">
            <key column="cat_id" not-null="true"/>
            <one-to-many class="DatabaseTransaction"/>
        </set>
        <set name="fixedTransactions" table="fixed_transactions" fetch="select" cascade="all">
            <key column="cat_id" not-null="true"/>
            <one-to-many class="DatabaseFixedTransaction" />
        </set>
    </class>
</hibernate-mapping>