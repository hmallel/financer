<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="de.raphaelmuesseler.financer.shared.model.db">
    <class name="DatabaseTransactionAttachment" table="transactions_attachments">
        <id name="id" type="int">
            <column name="id"/>
            <generator class="increment"/>
        </id>
        <many-to-one name="transaction" class="DatabaseTransaction" insert="false" update="false">
            <column name="transaction_id"/>
        </many-to-one>
        <property name="name" type="java.lang.String">
            <column name="name"/>
        </property>
        <property name="uploadDate" type="java.time.LocalDate">
            <column name="upload_date"/>
        </property>
        <property name="content" type="blob">
            <column name="content"/>
        </property>
    </class>
</hibernate-mapping>