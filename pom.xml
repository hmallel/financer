<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.raphaelmuesseler.financer</groupId>
    <artifactId>financer</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <modules>
        <module>de.raphaelmuesseler.financer.client</module>
        <module>de.raphaelmuesseler.financer.client.javafx</module>
        <module>de.raphaelmuesseler.financer.server</module>
        <module>de.raphaelmuesseler.financer.shared</module>
        <module>de.raphaelmuesseler.financer.util</module>
    </modules>
    <dependencies>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.6.2</version>
        </dependency>
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>20180813</version>
        </dependency>
        <dependency>
            <groupId>org.controlsfx</groupId>
            <artifactId>controlsfx</artifactId>
            <version>9.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.jfoenix</groupId>
            <artifactId>jfoenix</artifactId>
            <version>9.0.4</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>backend</id>
            <modules>
                <module>de.raphaelmuesseler.financer.server</module>
                <module>de.raphaelmuesseler.financer.shared</module>
            </modules>
        </profile>
        <profile>
            <id>frontend</id>
            <modules>
                <module>de.raphaelmuesseler.financer.client</module>
                <module>de.raphaelmuesseler.financer.client.javafx</module>
                <module>de.raphaelmuesseler.financer.shared</module>
            </modules>
        </profile>
        <profile>
            <id>all</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>de.raphaelmuesseler.financer.client</module>
                <module>de.raphaelmuesseler.financer.client.javafx</module>
                <module>de.raphaelmuesseler.financer.shared</module>
                <module>de.raphaelmuesseler.financer.server</module>
            </modules>
        </profile>
    </profiles>

</project>